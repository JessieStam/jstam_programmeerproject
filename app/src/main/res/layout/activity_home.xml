<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jstam.programmeerproject_scubascan.Activities.HomeActivity"
    android:background="@mipmap/titlescreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:textSize="50sp"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <Button
                android:text="@string/log_in_button_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button_id"
                android:onClick="logInUser"
                android:layout_weight="0.2"
                android:background="#CC238d5a"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <Button
                android:text="@string/sign_up_button_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/singup_button_id"
                android:onClick="signUpUser"
                android:layout_weight="0.2"
                android:background="#CC238d5a"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
