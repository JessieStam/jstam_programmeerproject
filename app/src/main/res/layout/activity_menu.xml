<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:text="Dive to where?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:padding="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#CCFFFFFF"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.6">

                <Button
                    android:text="New Dive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/new_dive_button"
                    android:layout_weight="0.6"
                    android:padding="5dp"
                    android:background="#66238d5a"
                    android:textColor="#000000"/>

                <Button
                    android:text="Dive Log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dive_log_button"
                    android:layout_weight="0.4"
                    android:padding="5dp"
                    android:background="#6629a77e"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.6"
                android:background="#FFFFFF"
                android:textColor="#000000">

                <Button
                    android:text="Statistics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/statistics_button"
                    android:layout_weight="0.4"
                    android:padding="5dp"
                    android:background="#662fc9ae"
                    android:textColor="#000000"/>

                <Button
                    android:text="Nitrogen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nitrogen_button"
                    android:layout_weight="0.6"
                    android:padding="5dp"
                    android:background="#662ddbcd"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>